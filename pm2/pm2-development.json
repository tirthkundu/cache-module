{
  "apps": [{
    "name": "fashionCLoud",
    "script": "app.js",
    "instances": 1,
    "watch": false,
    "merge_logs": true,
    "exec_mode": "fork",
    "error_file": "/var/log/pm2/err.log",
    "out_file": "/var/log/pm2/out.log",
    "log_date_format": "DD-MM-YYYY HH:mm Z",
    "cwd": "/var/www/fashionCloud",
    "env": {
      "NODE_ENV": "development",
      "NODE_CONFIG_DIR": "/var/www/fashionCloud/config"
    }
  }]
}
